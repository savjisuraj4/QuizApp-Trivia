<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    android:background="#FFFFFF"
    tools:context=".QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="25sp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/questionNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="top"
            android:elevation="5dp"
            android:textStyle="bold"
            android:text="@string/questionNo"
            android:textColor="@color/red"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="@string/what_country_does_this_flag_belong_to"
            tools:ignore="RtlCompat" />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_progress_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:indeterminate="false"
                android:max="10"
                android:progressBackgroundTint="@color/black"
                android:progressTint="@color/Green"
                android:paddingEnd="10dp"
                android:minHeight="50dp"
                android:progress="0" />

            <TextView
                android:paddingEnd="5dp"
                android:paddingStart="1dp"
                android:id="@+id/tv_progress_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/_0_10" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_option_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="@string/apple"
                android:textAllCaps="false"
                android:textColor="@color/black"
                tools:ignore="RtlSymmetry,DuplicateSpeakableTextCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_option_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:layout_marginEnd="25dp"
                android:textAllCaps="false"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_marginBottom="7dp"
                android:background="@drawable/button"
                android:text="@string/apple"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_option_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_marginBottom="7dp"
                android:background="@drawable/button"
                android:text="@string/apple"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_option_four"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/button"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:autoSizeTextType="uniform"
                android:layout_marginBottom="7dp"
                android:text="@string/apple"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                android:layout_height="match_parent" >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/prevoius_next_button_backgound"
                    android:drawableStart="@drawable/ic_baseline_arrow_circle_left_24"
                    android:drawablePadding="10dp"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:text="@string/previous"
                    android:textAlignment="center"
                    android:textColor="#E604F804"
                    android:textSize="23sp"
                    tools:ignore="TextContrastCheck,TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/prevoius_next_button_backgound"
                    android:backgroundTint="@color/Green"
                    android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                    android:drawablePadding="10dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:text="@string/next"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>